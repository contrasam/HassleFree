<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 
        
<hibernate-mapping package="com.soen.hasslefree.models">
    <class name="Clinic" table="clinic">
        <id name="clinicId"  type="long" column="clinicId">
            <generator class="increment"/>
        </id>  
        <property name="name"  column ="name" type="string"/>
        
        <one-to-one name="address" class="com.soen.hasslefree.models.Address"
            cascade="save-update"></one-to-one>
  
        
        <set name="rooms" table="room"
                inverse="true" lazy="false" fetch="select">
            <key>
                <column name="clinicId" not-null="true" />
            </key>
            <one-to-many class="com.soen.hasslefree.models.Clinic" />
        </set>
                 
    </class>
</hibernate-mapping>
