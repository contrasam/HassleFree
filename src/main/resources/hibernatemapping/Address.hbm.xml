<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 
        
<hibernate-mapping package="com.soen.hasslefree.models">
    <class name="Address" table="address">
        <id name="addressId"  type="long" column="addressId">
            <generator class="increment"/>
        </id>  
        <property name="streetNumber"  column ="streetNumber" type="string"/>
        <property name="streetName" column="streetName" type="string"/>
        <property name="apartmentNumber" column="apartmentNumber" type="string"/>
        <property name="city" column="city" type="string"/>
        <property name="province" column="province" type="string"/>
        <property name="postalCode" column="postalCode" type="string"/>
        <property name="country" column="country" type="string"/>
         
         <set name="associatedPatients" table="patient"
                 inverse="true" lazy="true" fetch="select">
                <key>
                    <column name="userId" not-null="true" />
                </key>
                <one-to-many class="com.soen.hasslefree.models.Patient" />
            </set>
    </class> 
    
 
</hibernate-mapping>
