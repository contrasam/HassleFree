<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 
        
<hibernate-mapping package="com.soen.hasslefree.models">
    <class name="User" table="user">
        <id name="userId" column="userId" type="long" >
            <generator class="increment"/>
        </id>  
      
        <property name="email"  column ="email" type="string"/>
        <property name="password" column="password" type="string"/>
        <property name="firstName" column="firstName" type="string"/>
        <property name="lastName" column="lastName" type="string"/>
        <property name="gender" column="gender" type="string"/>
        <property name="dateOfBirth" column="dateOfBirth" type="date"/>
        <property name="Address" column="homeAddress" type="Address"/>
        <property name="phoneNumber" column="phoneNumber" type="string"/>
   
        
        <joined-subclass name="Physician" extends="User">
            <key column="userId" />
            <property name="speciality"  column="speciality" type="string" />
            <property name="joinedDate"  column="joinedDate" type="date" />
            <set name="associatedPatients" table="patient"
                 inverse="true" lazy="true" fetch="select">
                <key>
                    <column name="userId" not-null="true" />
                </key>
                <one-to-many class="com.soen.hasslefree.models.Patient" />
            </set>
        </joined-subclass>
        
        <joined-subclass name="Patient" extends="User">
            <key column="userId" />
            <property name="healthCardNumber"  column="healthCardNumber" type="string" />       
            <many-to-one name="familyDoctor" class="com.soen.hasslefree.models.Physician" fetch="select">
                <column name="userId" not-null="false" />
            </many-to-one>
        </joined-subclass>
        
        <joined-subclass name="Nurse" extends="User">
            <key column="userId" />
            <property name="degree"  column="degree" type="string" />
        </joined-subclass>
             
    </class>  
</hibernate-mapping>
