<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 
        
<hibernate-mapping package="com.soen.hasslefree.models">
    <class name="Room" table="room">
        <id name="roomId"  type="long" column="roomId">
            <generator class="increment"/>
        </id>  
        <property name="roomNumber"  column ="roomNumber" type="string"/>
        
        <many-to-one name="associatedClinic" class="com.soen.hasslefree.models.Clinic" fetch="select">
            <column name="clinicId" not-null="true" />
        </many-to-one>    
    </class>
</hibernate-mapping>
